on_actions = {
  on_startup = {
    effect = {
      GER = {
        if = {
          limit = { NOT = { has_country_flag = wa_ger_convoys_added } }
          set_country_flag = wa_ger_convoys_added

          add_equipment_to_stockpile = {
            type = convoy_1
            amount = 200
            producer = GER
          }
        }
      }
    }
  }
}
