on_actions = {
  on_startup = {
    effect = {
      JAP = {
        if = {
          limit = { NOT = { has_country_flag = mp_fix_jap_convoys_added } }
          set_country_flag = mp_fix_jap_convoys_added

          add_equipment_to_stockpile = {
            type = convoy_1
            amount = 200
            producer = JAP
          }
        }
      }
    }
  }
}
