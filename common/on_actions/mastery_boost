  # From 1 Jan 1939 onward, ensure every country has the visible mastery idea.
  # This pattern also covers countries created/released AFTER 1939-01-01.
  on_daily = {
    effect = {
      if = {
        limit = { date >= 1939.1.1 }

        every_country = {
          limit = { NOT = { has_idea = land_mastery_boost } }
          add_ideas = land_mastery_boost
        }
      }
    }
  }
